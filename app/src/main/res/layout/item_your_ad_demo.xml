<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout"
        android:layout_margin="3dp">

        <ImageView
            android:id="@+id/iv_ads_photo"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:scaleType="centerInside"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_ads_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="advertisement name"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/iv_ads_photo" />

        <TextView
            android:id="@+id/tv_ads_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="50000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/tv_ads_city_name"

            app:layout_constraintTop_toBottomOf="@+id/tv_ads_name" />

        <TextView
            android:id="@+id/tv_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="5dp"
            android:text="$"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/tv_ads_city_name"
            app:layout_constraintStart_toEndOf="@id/tv_ads_price"
            app:layout_constraintTop_toBottomOf="@+id/tv_ads_name" />

        <TextView
            android:id="@+id/tv_ads_city_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="city name"
            android:textColor="@color/grey"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@id/tv_ads_date" />

        <TextView
            android:id="@+id/tv_ads_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="17 Mar 2023"
            android:textColor="@color/darkGrey"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>