<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_layout"
    android:layout_margin="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_ads_photo"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/logo"
            />
        <TextView
            android:id="@+id/tv_ads_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/iv_ads_photo"
            android:text="advertisement name"/>
        <TextView
            android:id="@+id/tv_ads_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_ads_name"
            android:text="50000"/>
        <TextView
            android:id="@+id/tv_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/tv_ads_price"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginStart="7dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_ads_name"
            android:text="$"/>

        <TextView
            android:id="@+id/tv_ads_city_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_ads_price"
            android:textSize="14sp"
            android:text="city name"
            android:textColor="@color/grey"
            />
        <TextView
            android:id="@+id/tv_ads_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_ads_city_name"
            android:textSize="14sp"
            android:text="17 Mar 2023"
            android:textColor="@color/darkGrey"
            />
        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="5dp"
            android:src="@drawable/like"/>
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>